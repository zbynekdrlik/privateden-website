---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { t, getAllLangPaths, type Lang } from '../../utils/i18n';
import { getAllApartments } from '../../utils/apartments';
import generalSettings from '../../content/settings/general.json';
import contactData from '../../content/settings/contact.json';

export function getStaticPaths() {
  return getAllLangPaths();
}

const { lang } = Astro.params as { lang: Lang };
const i18n = t(lang);
const apartments = getAllApartments();

const contactI18n = i18n.contact;
const fullAddress = `${contactData.address.street}, ${contactData.address.zip} ${contactData.address.city}, ${contactData.address.country}`;
---

<BaseLayout title={contactI18n.pageTitle} lang={lang} description={contactI18n.pageDescription}>

  <!-- Page Header -->
  <section class="bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-primary-dark)] text-white py-16 md:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: 'Playfair Display', serif;">
        {contactI18n.pageTitle}
      </h1>
      <p class="text-lg text-white/80 max-w-2xl mx-auto">
        {contactI18n.pageDescription}
      </p>
    </div>
  </section>

  <!-- Main Content: Two Column Layout -->
  <section class="py-12 md:py-20 bg-[var(--color-background)]">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-10 lg:gap-14">

        <!-- LEFT COLUMN: Booking Form -->
        <div class="lg:col-span-3">
          <div class="bg-white rounded-2xl shadow-sm border border-[var(--color-text-muted)]/10 p-6 sm:p-8">
            <h2 class="text-2xl md:text-3xl font-bold text-[var(--color-text)] mb-8">
              {contactI18n.formHeading}
            </h2>

            <!-- Success Message (hidden by default) -->
            <div id="success-message" class="hidden mb-8 p-6 bg-green-50 border border-green-200 rounded-xl text-center">
              <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <p class="text-green-800 font-medium">{contactI18n.successMessage}</p>
            </div>

            <form
              id="booking-form"
              action="https://api.web3forms.com/submit"
              method="POST"
              class="space-y-6"
            >
              <!-- Hidden fields -->
              <input type="hidden" name="access_key" value={contactData.web3formsKey} />
              <input type="hidden" name="subject" value="New booking inquiry from Privat Eden" />
              <input type="hidden" name="from_name" value="Privat Eden Website" />
              <!-- Honeypot spam protection -->
              <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />

              <!-- Name -->
              <div>
                <label for="name" class="block text-sm font-medium text-[var(--color-text)] mb-2">
                  {contactI18n.name} <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  placeholder={contactI18n.namePlaceholder}
                  class="w-full px-4 py-3 rounded-xl border border-[var(--color-text-muted)]/20 bg-[var(--color-background)] text-[var(--color-text)] placeholder-[var(--color-text-muted)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]/40 focus:border-[var(--color-primary)] transition-colors"
                />
              </div>

              <!-- Email & Phone Row -->
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="email" class="block text-sm font-medium text-[var(--color-text)] mb-2">
                    {contactI18n.email} <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    placeholder={contactI18n.emailPlaceholder}
                    class="w-full px-4 py-3 rounded-xl border border-[var(--color-text-muted)]/20 bg-[var(--color-background)] text-[var(--color-text)] placeholder-[var(--color-text-muted)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]/40 focus:border-[var(--color-primary)] transition-colors"
                  />
                </div>
                <div>
                  <label for="phone" class="block text-sm font-medium text-[var(--color-text)] mb-2">
                    {contactI18n.phone}
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    placeholder={contactI18n.phonePlaceholder}
                    class="w-full px-4 py-3 rounded-xl border border-[var(--color-text-muted)]/20 bg-[var(--color-background)] text-[var(--color-text)] placeholder-[var(--color-text-muted)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]/40 focus:border-[var(--color-primary)] transition-colors"
                  />
                </div>
              </div>

              <!-- Apartment Dropdown -->
              <div>
                <label for="apartment" class="block text-sm font-medium text-[var(--color-text)] mb-2">
                  {contactI18n.apartment}
                </label>
                <select
                  id="apartment"
                  name="apartment"
                  class="w-full px-4 py-3 rounded-xl border border-[var(--color-text-muted)]/20 bg-[var(--color-background)] text-[var(--color-text)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]/40 focus:border-[var(--color-primary)] transition-colors"
                >
                  <option value="">{contactI18n.selectApartment}</option>
                  {apartments.map(apt => (
                    <option value={apt.name[lang]}>{apt.name[lang]}</option>
                  ))}
                </select>
              </div>

              <!-- Check-in & Check-out Row -->
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="checkin" class="block text-sm font-medium text-[var(--color-text)] mb-2">
                    {contactI18n.checkIn} <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="date"
                    id="checkin"
                    name="check_in"
                    required
                    class="w-full px-4 py-3 rounded-xl border border-[var(--color-text-muted)]/20 bg-[var(--color-background)] text-[var(--color-text)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]/40 focus:border-[var(--color-primary)] transition-colors"
                  />
                </div>
                <div>
                  <label for="checkout" class="block text-sm font-medium text-[var(--color-text)] mb-2">
                    {contactI18n.checkOut} <span class="text-red-500">*</span>
                  </label>
                  <input
                    type="date"
                    id="checkout"
                    name="check_out"
                    required
                    class="w-full px-4 py-3 rounded-xl border border-[var(--color-text-muted)]/20 bg-[var(--color-background)] text-[var(--color-text)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]/40 focus:border-[var(--color-primary)] transition-colors"
                  />
                </div>
              </div>

              <!-- Number of Guests -->
              <div>
                <label for="guests" class="block text-sm font-medium text-[var(--color-text)] mb-2">
                  {contactI18n.guests} <span class="text-red-500">*</span>
                </label>
                <input
                  type="number"
                  id="guests"
                  name="guests"
                  required
                  min="1"
                  max="23"
                  value="2"
                  class="w-full px-4 py-3 rounded-xl border border-[var(--color-text-muted)]/20 bg-[var(--color-background)] text-[var(--color-text)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]/40 focus:border-[var(--color-primary)] transition-colors"
                />
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-medium text-[var(--color-text)] mb-2">
                  {contactI18n.message}
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="4"
                  placeholder={contactI18n.messagePlaceholder}
                  class="w-full px-4 py-3 rounded-xl border border-[var(--color-text-muted)]/20 bg-[var(--color-background)] text-[var(--color-text)] placeholder-[var(--color-text-muted)] focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)]/40 focus:border-[var(--color-primary)] transition-colors resize-vertical"
                ></textarea>
              </div>

              <!-- Submit Button -->
              <div>
                <button
                  type="submit"
                  id="submit-btn"
                  class="w-full sm:w-auto px-10 py-4 bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] text-white font-semibold rounded-full transition-colors duration-200 text-lg flex items-center justify-center gap-2"
                >
                  <span id="submit-text">{contactI18n.submit}</span>
                  <svg id="submit-spinner" class="hidden w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                </button>
              </div>
            </form>
          </div>
        </div>

        <!-- RIGHT COLUMN: Contact Info + Map -->
        <div class="lg:col-span-2 space-y-8">

          <!-- Contact Info Card -->
          <div class="bg-white rounded-2xl shadow-sm border border-[var(--color-text-muted)]/10 p-6 sm:p-8">
            <h3 class="text-xl font-bold text-[var(--color-text)] mb-6">
              {contactI18n.contactPerson}
            </h3>

            <div class="space-y-5">
              <!-- Person -->
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-[var(--color-primary-light)] rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-5 h-5 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-[var(--color-text-muted)] mb-0.5">{contactI18n.contactPerson}</p>
                  <p class="font-semibold text-[var(--color-text)]">{generalSettings.contactPerson}</p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-[var(--color-primary-light)] rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-5 h-5 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-[var(--color-text-muted)] mb-0.5">{contactI18n.phone}</p>
                  <a
                    href={`tel:${generalSettings.phone.replace(/\s/g, '')}`}
                    class="font-semibold text-[var(--color-primary)] hover:text-[var(--color-primary-dark)] transition-colors"
                  >
                    {generalSettings.phone}
                  </a>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-[var(--color-primary-light)] rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-5 h-5 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-[var(--color-text-muted)] mb-0.5">{contactI18n.email}</p>
                  <a
                    href={`mailto:${generalSettings.email}`}
                    class="font-semibold text-[var(--color-primary)] hover:text-[var(--color-primary-dark)] transition-colors break-all"
                  >
                    {generalSettings.email}
                  </a>
                </div>
              </div>

              <!-- Address -->
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-[var(--color-primary-light)] rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-5 h-5 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-[var(--color-text-muted)] mb-0.5">{contactI18n.address}</p>
                  <p class="font-semibold text-[var(--color-text)]">
                    {contactData.address.street}<br />
                    {contactData.address.zip} {contactData.address.city}<br />
                    {contactData.address.country}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Important Info Card -->
          <div class="bg-white rounded-2xl shadow-sm border border-[var(--color-text-muted)]/10 p-6 sm:p-8">
            <h3 class="text-xl font-bold text-[var(--color-text)] mb-6">
              {contactI18n.infoTitle}
            </h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-1 gap-3">
              <!-- Check-in -->
              <div class="flex items-center gap-3 px-4 py-3 bg-[var(--color-background-alt)] rounded-xl">
                <svg class="w-5 h-5 text-[var(--color-primary)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                </svg>
                <span class="text-sm font-medium text-[var(--color-text)]">{contactI18n.checkInTime}</span>
              </div>
              <!-- Check-out -->
              <div class="flex items-center gap-3 px-4 py-3 bg-[var(--color-background-alt)] rounded-xl">
                <svg class="w-5 h-5 text-[var(--color-primary)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                <span class="text-sm font-medium text-[var(--color-text)]">{contactI18n.checkOutTime}</span>
              </div>
              <!-- Payment -->
              <div class="flex items-center gap-3 px-4 py-3 bg-[var(--color-background-alt)] rounded-xl">
                <svg class="w-5 h-5 text-[var(--color-primary)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <span class="text-sm font-medium text-[var(--color-text)]">{contactI18n.paymentMethod}</span>
              </div>
              <!-- Quiet Hours -->
              <div class="flex items-center gap-3 px-4 py-3 bg-[var(--color-background-alt)] rounded-xl">
                <svg class="w-5 h-5 text-[var(--color-primary)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
                </svg>
                <span class="text-sm font-medium text-[var(--color-text)]">{contactI18n.quietHours}</span>
              </div>
            </div>
          </div>

          <!-- Google Maps Embed -->
          <div class="bg-white rounded-2xl shadow-sm border border-[var(--color-text-muted)]/10 overflow-hidden">
            <iframe
              src={contactData.mapEmbed}
              width="100%"
              height="300"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title={fullAddress}
              class="w-full"
            ></iframe>
          </div>

        </div>
      </div>
    </div>
  </section>

</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('booking-form') as HTMLFormElement | null;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement | null;
    const submitText = document.getElementById('submit-text');
    const submitSpinner = document.getElementById('submit-spinner');
    const successMessage = document.getElementById('success-message');

    if (!form || !submitBtn) return;

    // Set minimum dates to today
    const today = new Date().toISOString().split('T')[0];
    const checkinInput = document.getElementById('checkin') as HTMLInputElement | null;
    const checkoutInput = document.getElementById('checkout') as HTMLInputElement | null;

    if (checkinInput) {
      checkinInput.min = today;
      checkinInput.addEventListener('change', () => {
        if (checkoutInput) {
          checkoutInput.min = checkinInput.value || today;
          // If checkout is before checkin, reset it
          if (checkoutInput.value && checkoutInput.value < checkinInput.value) {
            checkoutInput.value = '';
          }
        }
      });
    }
    if (checkoutInput) {
      checkoutInput.min = today;
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Show loading state
      submitBtn.disabled = true;
      if (submitText) submitText.classList.add('hidden');
      if (submitSpinner) submitSpinner.classList.remove('hidden');

      try {
        const formData = new FormData(form);
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
        });

        if (response.ok) {
          // Show success message
          if (successMessage) {
            successMessage.classList.remove('hidden');
          }
          form.reset();
          // Scroll to success message
          successMessage?.scrollIntoView({ behavior: 'smooth', block: 'center' });
        } else {
          throw new Error('Form submission failed');
        }
      } catch {
        // On error, just re-enable the button so user can try again
        alert('Something went wrong. Please try again or contact us directly.');
      } finally {
        // Restore button state
        submitBtn.disabled = false;
        if (submitText) submitText.classList.remove('hidden');
        if (submitSpinner) submitSpinner.classList.add('hidden');
      }
    });
  });
</script>
