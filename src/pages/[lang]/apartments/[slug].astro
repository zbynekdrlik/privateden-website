---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { t, getLocalizedPath, SUPPORTED_LANGS, type Lang } from '../../../utils/i18n';
import { getAllApartments, getApartmentBySlug } from '../../../utils/apartments';
import generalSettings from '../../../content/settings/general.json';

export function getStaticPaths() {
  const apartments = getAllApartments();
  return SUPPORTED_LANGS.flatMap(lang =>
    apartments.map(apt => ({ params: { lang, slug: apt.slug } }))
  );
}

const { lang, slug } = Astro.params as { lang: Lang; slug: string };
const i18n = t(lang);
const apt = getApartmentBySlug(slug);

if (!apt) {
  return Astro.redirect(getLocalizedPath(lang, '/apartments'));
}

const aptName: string = apt.name[lang] || apt.name['sk'];
const aptDescription: string = apt.description[lang] || apt.description['sk'];
const aptCapacityNote: string = apt.capacityNote[lang] || apt.capacityNote['sk'];

const roomTypeLabels: Record<string, string> = {
  bedroom: i18n.apartments.bedroom,
  livingRoom: i18n.apartments.livingRoom,
  kitchenette: i18n.apartments.kitchenette,
  bathroom: i18n.apartments.bathroom,
};

const bedTypeLabels: Record<string, string> = {
  double: i18n.apartments.doubleBed,
  bunk: i18n.apartments.bunkBed,
  single: i18n.apartments.singleBed,
  sofa: i18n.apartments.sofaBed,
};

const featureLabels: Record<string, string> = {
  wifi: i18n.apartments.wifi,
  tv: i18n.apartments.tv,
  kitchenette: i18n.apartments.kitchenette,
  bathroom: i18n.apartments.bathroom,
  parking: 'Parking',
};

const featureIcons: Record<string, string> = {
  wifi: 'M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.14 0M1.394 9.393c5.857-5.858 15.355-5.858 21.213 0',
  tv: 'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  kitchenette: 'M3 3h18v18H3zM3 9h18M9 21V9',
  bathroom: 'M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14',
  parking: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5h4v5m1-2h.01',
};

const roomIcons: Record<string, string> = {
  bedroom: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-4 0h4',
  livingRoom: 'M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4',
  kitchenette: 'M3 3h18v18H3zM3 9h18M9 21V9',
  bathroom: 'M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14',
};

const allImages = [apt.mainImage, ...apt.images.filter(img => img !== apt.mainImage)];
---

<BaseLayout title={aptName} lang={lang} description={aptDescription}>

  <!-- Back to list -->
  <div class="bg-[var(--color-background-alt)] border-b border-[var(--color-text-muted)]/10">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <a
        href={getLocalizedPath(lang, '/apartments')}
        class="inline-flex items-center text-[var(--color-primary)] hover:text-[var(--color-primary-dark)] font-medium transition-colors duration-200"
      >
        {i18n.apartments.backToList}
      </a>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10 md:py-16">

    <!-- GALLERY + INFO GRID -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 mb-16">

      <!-- Photo Gallery -->
      <div>
        <div class="aspect-[4/3] rounded-2xl overflow-hidden mb-4 bg-[var(--color-background-alt)]">
          <img
            id="main-image"
            src={apt.mainImage}
            alt={aptName}
            class="w-full h-full object-cover"
          />
        </div>
        {allImages.length > 1 && (
          <div>
            <h3 class="text-sm font-semibold text-[var(--color-text-muted)] uppercase tracking-wider mb-3">
              {i18n.apartments.gallery}
            </h3>
            <div class="grid grid-cols-4 sm:grid-cols-5 gap-2">
              {allImages.map((img, idx) => (
                <button
                  class:list={[
                    'gallery-thumb aspect-square rounded-lg overflow-hidden border-2 transition-all duration-200 cursor-pointer hover:opacity-90',
                    idx === 0 ? 'border-[var(--color-primary)]' : 'border-transparent'
                  ]}
                  data-src={img}
                >
                  <img
                    src={img}
                    alt={`${aptName} - ${idx + 1}`}
                    class="w-full h-full object-cover"
                  />
                </button>
              ))}
            </div>
          </div>
        )}
      </div>

      <!-- Apartment Info -->
      <div>
        <h1 class="text-3xl md:text-4xl font-bold text-[var(--color-text)] mb-4" style="font-family: 'Playfair Display', serif;">
          {aptName}
        </h1>
        <p class="text-lg text-[var(--color-text-light)] leading-relaxed mb-8">
          {aptDescription}
        </p>

        <!-- Info Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8">
          <!-- Capacity -->
          <div class="bg-[var(--color-background-alt)] rounded-xl p-5 text-center">
            <div class="w-10 h-10 bg-[var(--color-primary-light)] rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-5 h-5 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <p class="text-sm text-[var(--color-text-muted)] mb-1">{i18n.apartments.capacity}</p>
            <p class="text-xl font-bold text-[var(--color-text)]">{apt.capacity} {i18n.apartments.persons}</p>
            <p class="text-xs text-[var(--color-text-muted)] mt-1">{aptCapacityNote}</p>
          </div>

          <!-- Bedrooms -->
          <div class="bg-[var(--color-background-alt)] rounded-xl p-5 text-center">
            <div class="w-10 h-10 bg-[var(--color-primary-light)] rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-5 h-5 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-4 0h4" />
              </svg>
            </div>
            <p class="text-sm text-[var(--color-text-muted)] mb-1">{i18n.apartments.bedrooms}</p>
            <p class="text-xl font-bold text-[var(--color-text)]">
              {apt.bedroomCount} {apt.bedroomCount > 1 ? i18n.apartments.bedroomPlural : i18n.apartments.bedroom}
            </p>
          </div>

          <!-- Price -->
          <div class="bg-[var(--color-background-alt)] rounded-xl p-5 text-center">
            <div class="w-10 h-10 bg-[var(--color-accent-light)] rounded-full flex items-center justify-center mx-auto mb-3">
              <svg class="w-5 h-5 text-[var(--color-accent)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <p class="text-sm text-[var(--color-text-muted)] mb-1">{i18n.apartments.priceFrom}</p>
            <p class="text-xl font-bold text-[var(--color-primary)]">{apt.priceRange.min} {i18n.apartments.pricePerNight}</p>
            {apt.priceRange.max > apt.priceRange.min && (
              <p class="text-xs text-[var(--color-text-muted)] mt-1">max {apt.priceRange.max} {i18n.apartments.pricePerNight}</p>
            )}
          </div>
        </div>

        <!-- Room Breakdown -->
        <div class="mb-8">
          <h2 class="text-xl font-bold text-[var(--color-text)] mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5h4v5m1-2h.01" />
            </svg>
            {i18n.apartments.equipment}
          </h2>
          <div class="space-y-3">
            {apt.rooms.map(room => {
              const roomLabel = roomTypeLabels[room.type] || room.type;
              const iconPath = roomIcons[room.type] || roomIcons.bedroom;
              return (
                <div class="flex items-start gap-3 bg-[var(--color-background-alt)] rounded-xl p-4">
                  <div class="w-8 h-8 bg-[var(--color-primary-light)] rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-4 h-4 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPath} />
                    </svg>
                  </div>
                  <div>
                    <p class="font-semibold text-[var(--color-text)]">{roomLabel}</p>
                    {room.beds && room.beds.length > 0 && (
                      <p class="text-sm text-[var(--color-text-light)] mt-0.5">
                        {room.beds.map(bed => {
                          const bedLabel = bedTypeLabels[bed.type] || bed.type;
                          return `${bed.count}x ${bedLabel}`;
                        }).join(', ')}
                      </p>
                    )}
                    {room.extras && room.extras.length > 0 && (
                      <p class="text-sm text-[var(--color-text-light)] mt-0.5">
                        {room.extras.map(extra => {
                          if (extra === 'tv') return i18n.apartments.tv;
                          if (extra === 'sofa') return i18n.apartments.sofaBed;
                          return extra;
                        }).join(', ')}
                      </p>
                    )}
                  </div>
                </div>
              );
            })}
          </div>
        </div>

        <!-- Features -->
        <div class="mb-8">
          <h2 class="text-xl font-bold text-[var(--color-text)] mb-4 flex items-center gap-2">
            <svg class="w-5 h-5 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            {i18n.apartments.equipment}
          </h2>
          <div class="flex flex-wrap gap-3">
            {apt.features.map(feature => {
              const label = featureLabels[feature] || feature;
              const iconPath = featureIcons[feature] || featureIcons.wifi;
              return (
                <span class="inline-flex items-center gap-2 px-4 py-2 bg-[var(--color-background-alt)] rounded-full text-sm font-medium text-[var(--color-text)]">
                  <svg class="w-4 h-4 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPath} />
                  </svg>
                  {label}
                </span>
              );
            })}
          </div>
        </div>

        <!-- Book CTA -->
        <a
          href={getLocalizedPath(lang, '/contact')}
          class="inline-flex items-center justify-center w-full sm:w-auto px-10 py-4 bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] text-white font-semibold rounded-full transition-colors duration-200 text-lg shadow-lg hover:shadow-xl"
        >
          {i18n.apartments.bookThis}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>

    <!-- Contact Info Section -->
    <div class="bg-[var(--color-background-alt)] rounded-2xl p-8 md:p-10">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div>
          <h2 class="text-2xl font-bold text-[var(--color-text)] mb-2">{i18n.contact.contactPerson}</h2>
          <p class="text-[var(--color-text-light)] mb-4">{generalSettings.contactPerson}</p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href={`tel:${generalSettings.phone.replace(/\s/g, '')}`}
              class="inline-flex items-center gap-2 text-[var(--color-primary)] hover:text-[var(--color-primary-dark)] font-medium transition-colors duration-200"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {generalSettings.phone}
            </a>
            <a
              href={`mailto:${generalSettings.email}`}
              class="inline-flex items-center gap-2 text-[var(--color-primary)] hover:text-[var(--color-primary-dark)] font-medium transition-colors duration-200"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {generalSettings.email}
            </a>
          </div>
        </div>
        <a
          href={getLocalizedPath(lang, '/contact')}
          class="inline-flex items-center px-8 py-3 border-2 border-[var(--color-primary)] text-[var(--color-primary)] hover:bg-[var(--color-primary)] hover:text-white rounded-full font-medium transition-colors duration-200"
        >
          {i18n.apartments.bookThis}
        </a>
      </div>
    </div>

  </div>

</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mainImage = document.getElementById('main-image') as HTMLImageElement | null;
    const thumbs = document.querySelectorAll('.gallery-thumb');

    if (!mainImage || thumbs.length === 0) return;

    thumbs.forEach(thumb => {
      thumb.addEventListener('click', () => {
        const src = thumb.getAttribute('data-src');
        if (!src) return;

        mainImage.src = src;

        thumbs.forEach(t => {
          t.classList.remove('border-[var(--color-primary)]');
          t.classList.add('border-transparent');
        });

        thumb.classList.remove('border-transparent');
        thumb.classList.add('border-[var(--color-primary)]');
      });
    });
  });
</script>
