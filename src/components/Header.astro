---
import LanguageSwitcher from './LanguageSwitcher.astro';
import navigationData from '../content/settings/navigation.json';
import generalSettings from '../content/settings/general.json';
import { type Lang, t, getLocalizedPath } from '../utils/i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const i18n = t(lang);
const navLabels = i18n.nav as Record<string, string>;
const { mainNav, ctaButton, logo } = navigationData;
const enabledNav = mainNav.filter(item => item.enabled);
const currentPath = Astro.url.pathname;
---

<header class="bg-[var(--color-header-bg)]/95 backdrop-blur-md shadow-sm sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 md:h-20">
      <!-- Logo -->
      <a href={getLocalizedPath(lang, '/')} class="flex items-center gap-2">
        <span class="text-xl md:text-2xl font-bold font-[var(--font-heading)]" style="font-family: 'Playfair Display', serif;">
          <span class="text-[var(--color-primary)]">Priv√°t</span> <span class="text-[var(--color-accent)]">Eden</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        {enabledNav.map(link => {
          const href = getLocalizedPath(lang, link.href);
          const label = navLabels[link.key] || link.key;
          const isActive = currentPath === href || (link.href !== '/' && currentPath.startsWith(href));
          return (
            <a
              href={href}
              class={`text-sm font-medium transition-colors duration-200 ${
                isActive
                  ? 'text-[var(--color-primary)]'
                  : 'text-[var(--color-text-light)] hover:text-[var(--color-primary)]'
              }`}
            >
              {label}
            </a>
          );
        })}

        <LanguageSwitcher currentLang={lang} currentPath={currentPath} />

        {ctaButton.enabled && (
          <a
            href={getLocalizedPath(lang, ctaButton.href)}
            class="bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] text-white px-5 py-2.5 rounded-full text-sm font-medium transition-colors duration-200"
          >
            {navLabels[ctaButton.key]}
          </a>
        )}
      </div>

      <!-- Mobile: Lang + Menu Button -->
      <div class="flex items-center gap-2 md:hidden">
        <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
        <button
          id="mobile-menu-button"
          class="p-2 rounded-lg text-[var(--color-text-light)] hover:bg-[var(--color-background-alt)]"
          aria-label="Menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col space-y-2">
        {enabledNav.map(link => {
          const href = getLocalizedPath(lang, link.href);
          const label = navLabels[link.key] || link.key;
          const isActive = currentPath === href || (link.href !== '/' && currentPath.startsWith(href));
          return (
            <a
              href={href}
              class={`text-base font-medium px-3 py-2.5 rounded-lg transition-colors duration-200 ${
                isActive
                  ? 'text-[var(--color-primary)] bg-[var(--color-primary-light)]'
                  : 'text-[var(--color-text-light)] hover:bg-[var(--color-background-alt)]'
              }`}
            >
              {label}
            </a>
          );
        })}
        {ctaButton.enabled && (
          <a
            href={getLocalizedPath(lang, ctaButton.href)}
            class="bg-[var(--color-primary)] hover:bg-[var(--color-primary-dark)] text-white px-5 py-2.5 rounded-full text-sm font-medium text-center transition-colors duration-200 mt-2"
          >
            {navLabels[ctaButton.key]}
          </a>
        )}
      </div>
    </div>
  </nav>
</header>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
