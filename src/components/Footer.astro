---
import navigationData from '../content/settings/navigation.json';
import generalSettings from '../content/settings/general.json';
import contactData from '../content/settings/contact.json';
import { type Lang, t, getLocalizedPath } from '../utils/i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const i18n = t(lang);
const navLabels = i18n.nav as Record<string, string>;
const enabledNav = navigationData.mainNav.filter(item => item.enabled);
const currentYear = new Date().getFullYear();
---

<footer class="bg-[var(--color-text)] text-stone-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About -->
      <div>
        <h3 class="text-2xl font-bold mb-4" style="font-family: 'Playfair Display', serif;">
          <span class="text-[var(--color-primary)]">Priv√°t</span> <span class="text-[var(--color-accent)]">Eden</span>
        </h3>
        <p class="text-stone-400 mb-4">{i18n.footer.tagline}</p>
        <div class="flex items-center gap-2 text-stone-400">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <a href={`tel:${generalSettings.phone}`} class="hover:text-[var(--color-primary)] transition-colors">
            {generalSettings.phone}
          </a>
        </div>
        <div class="flex items-center gap-2 text-stone-400 mt-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <a href={`mailto:${generalSettings.email}`} class="hover:text-[var(--color-primary)] transition-colors">
            {generalSettings.email}
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">{i18n.footer.quickLinks}</h4>
        <ul class="space-y-2">
          {enabledNav.map(link => (
            <li>
              <a
                href={getLocalizedPath(lang, link.href)}
                class="hover:text-[var(--color-primary)] transition-colors duration-200"
              >
                {navLabels[link.key]}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4">{i18n.footer.contactInfo}</h4>
        <div class="space-y-2 text-stone-400">
          <p>{contactData.address.street}</p>
          <p>{contactData.address.zip} {contactData.address.city}</p>
          <p>{contactData.address.country}</p>
          <p class="mt-4">
            <span class="text-stone-300">{i18n.contact.contactPerson}:</span> {generalSettings.contactPerson}
          </p>
        </div>
      </div>
    </div>

    <div class="border-t border-stone-700 mt-10 pt-8 text-center text-stone-500 text-sm">
      <p>&copy; {currentYear} {i18n.footer.copyright}</p>
    </div>
  </div>
</footer>
