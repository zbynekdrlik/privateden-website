---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { generateCSSVariables } from '../utils/theme'
import generalSettings from '../content/settings/general.json'
import { type Lang, DEFAULT_LANG } from '../utils/i18n'

interface Props {
  title: string;
  description?: string;
  lang?: Lang;
}

const { title, description = "Rodinn√© ubytovanie v srdci Liptova", lang = DEFAULT_LANG } = Astro.props;
const cssVariables = generateCSSVariables();
const siteName = generalSettings.siteName;

// Build alternate language URLs
const pathWithoutLang = Astro.url.pathname.replace(/^\/(sk|pl|en)/, '') || '/';
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" hreflang="sk" href={`/sk${pathWithoutLang}`} />
    <link rel="alternate" hreflang="pl" href={`/pl${pathWithoutLang}`} />
    <link rel="alternate" hreflang="en" href={`/en${pathWithoutLang}`} />
    <link rel="alternate" hreflang="x-default" href={`/sk${pathWithoutLang}`} />
    <title>{title} | {siteName}</title>
    <style set:html={cssVariables}></style>
  </head>
  <body class="min-h-screen flex flex-col bg-[var(--color-background)] text-[var(--color-text)]">
    <Header lang={lang} />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
